@using System.Globalization
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<App> Localizer

@inherits PageComponentBase<CultureSelectorViewModel>

@if (this.Model is { Culture: not null, CultureConverter: not null })
{
	<MudSelect AdornmentColor="Color.Inherit" @bind-Value="this.Model.Culture" CloseIcon="@Icons.Material.Filled.Flag" HelperText="@Localizer["Language"]" Placeholder="@Localizer["SelectLanguage"]" ToStringFunc="@Model.CultureConverter">
		<MudSelectItem Value="@(CultureInfo.GetCultureInfo("en"))" />
		<MudSelectItem Value="@(CultureInfo.GetCultureInfo("cs"))" />
	</MudSelect>
}
