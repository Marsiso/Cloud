@using Microsoft.Extensions.Localization

@inherits PageLayoutComponentBase<MainLayoutViewModel>

@inject IStringLocalizer<App> Localizer

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Transparent" Elevation="25">
        <MudIconButton Color="Color.Inherit" Edge="Edge.Start" Icon="@Icons.Material.Filled.Menu" OnClick="@Model.ToggleSidebar" />
        <MudText Class="ml-3" Color="Color.Inherit" Typo="Typo.h5">Cloud</MudText>
        <MudSpacer />
        <MudMenu ActivationEvent="MouseEvent.LeftClick" AnchorOrigin="Origin.BottomLeft" Color="Color.Inherit" FullWidth="false" TransformOrigin="Origin.BottomLeft" Variant="Variant.Text">
            <ActivatorContent>
                <MudAvatar Color="Color.Inherit" Elevation="25" Rounded="true" Variant="Variant.Text" />
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Disabled="true" Icon="@Icons.Material.Filled.Person3">FirstName LastName</MudMenuItem>
                <MudMenuItem Disabled="true" Icon="@Icons.Material.Filled.Email">fistname.lastname@example.com</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.AccountBox">@Localizer["Account"]</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.Settings">@Localizer["Settings"]</MudMenuItem>
                <MudMenuItem Icon="@Icons.Material.Filled.Logout">@Localizer["Logout"]</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@Model.IsSidebarVisible" ClipMode="DrawerClipMode.Always" Color="Color.Inherit" DisableOverlay="true" Elevation="1" Variant="DrawerVariant.Responsive">
        <MudStack Justify="Justify.SpaceBetween" Style="height: 100vh">
            <MudNavMenu Color="Color.Inherit" Margin="Margin.Normal" Rounded="false">
                <MudNavLink Icon="@Icons.Material.Filled.Folder" Match="NavLinkMatch.All">@Localizer["Files"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Link" Match="NavLinkMatch.All">@Localizer["SharedWithMe"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Bookmark" Match="NavLinkMatch.All">@Localizer["Bookmarks"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Delete" Match="NavLinkMatch.All">@Localizer["Deleted"]</MudNavLink>
                <MudDivider DividerType="DividerType.Middle" />
                <MudNavLink Icon="@Icons.Material.Filled.Error" Match="NavLinkMatch.All">@Localizer["Notifications"]</MudNavLink>
                <MudDivider DividerType="DividerType.Middle" />
                <MudNavLink Icon="@Icons.Material.Filled.ManageAccounts" Match="NavLinkMatch.All">@Localizer["ManageUsers"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.AddToDrive" Match="NavLinkMatch.All">@Localizer["ManageRepository"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.DashboardCustomize" Match="NavLinkMatch.All">@Localizer["ManageCodeLists"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.AddTask" Match="NavLinkMatch.All">@Localizer["ManageTasks"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.BarChart" Match="NavLinkMatch.All">@Localizer["Statistics"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.ManageHistory" Match="NavLinkMatch.All">@Localizer["History"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.LogoDev" Match="NavLinkMatch.All">@Localizer["Logs"]</MudNavLink>
            </MudNavMenu>
            <MudNavMenu Color="Color.Inherit" Margin="Margin.Normal" Rounded="false">
                <MudNavLink Icon="@Icons.Material.Filled.AccountBox" Match="NavLinkMatch.All">@Localizer["Account"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Settings" Match="NavLinkMatch.All">@Localizer["Settings"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Info" Match="NavLinkMatch.All">@Localizer["AboutApplication"]</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Logout" Match="NavLinkMatch.All">@Localizer["Logout"]</MudNavLink>
            </MudNavMenu>
        </MudStack>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudContainer Class="my-4">
                @GetChildren()
            </MudContainer>
        </MudContainer>
    </MudMainContent>
</MudLayout>
